@model List<TallerMvcNet.Models.CalendarEvent>

<div class="container mt-4">
    <h2 class="text-center mb-4">📅 Calendario de Eventos</h2>

    <div class="card bg-light mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Nuevo Evento</h5>
            <form asp-action="Add" method="post" class="row g-3">
                <div class="col-md-4">
                    <input name="Title" class="form-control" placeholder="Título (Ej: Dentista)" required />
                </div>
                <div class="col-md-3">
                    <input name="Date" type="date" class="form-control" required />
                </div>
                <div class="col-md-2">
                    <input name="Time" type="time" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Agregar</button>
                </div>
                <input type="hidden" name="ReminderMinutes" value="15" />
                <input type="hidden" name="Details" value="" />
            </form>
        </div>
    </div>

    <div class="row">
        @if (Model.Count == 0)
        {
            <p class="text-center text-muted">No hay eventos próximos.</p>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card border-left-primary shadow-sm h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">@item.Title</h5>
                            <p class="mb-0 text-muted">
                                📅 @item.Date.ToShortDateString() &nbsp; ⏰ @item.Time.ToString(@"hh\:mm")
                            </p>
                            @if (item.ReminderMinutes > 0)
                            {
                                <small class="text-info">🔔 @item.ReminderMinutes min antes</small>
                            }
                        </div>
                        <div class="btn-group-vertical">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-warning">✏️ Editar</a>

                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('¿Borrar este evento?')">🗑️</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>