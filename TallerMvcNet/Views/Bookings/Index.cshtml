@model List<TallerMvcNet.Models.Reservation>

<div class="container mt-4">
    <h2 class="text-center">📅 Sistema de Reservas</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info text-center">@ViewBag.Message</div>
    }

    <div class="row mt-4">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">1. Selecciona Fecha</div>
                <div class="card-body">
                    <form method="get" action="@Url.Action("Index")" class="mb-3">
                        <label>Fecha:</label>
                        <div class="input-group">
                            <input type="date" name="searchDate" class="form-control"
                                   value="@(((DateTime)ViewBag.CurrentDate).ToString("yyyy-MM-dd"))" />
                            <button type="submit" class="btn btn-outline-primary">Ver Horarios</button>
                        </div>
                    </form>

                    <hr />

                    <h6>2. Horarios Disponibles para el <strong>@(((DateTime)ViewBag.CurrentDate).ToShortDateString())</strong>:</h6>

                    @{
                        var slots = ViewBag.AvailableSlots as List<string>;
                    }

                    @if (slots == null || slots.Count == 0)
                    {
                        <div class="alert alert-warning">⚠️ Lo sentimos, no hay horarios libres para esta fecha.</div>
                    }
                    else
                    {
                        <div class="d-grid gap-2">
                            @foreach (var slot in slots)
                            {
                                <form asp-action="Book" method="post">
                                    <input type="hidden" name="date" value="@(((DateTime)ViewBag.CurrentDate).ToString("yyyy-MM-dd"))" />
                                    <input type="hidden" name="time" value="@slot" />

                                    <div class="input-group mb-2">
                                        <span class="input-group-text bg-light">@slot</span>
                                        <input type="text" name="userName" class="form-control" placeholder="Tu nombre..." required />
                                        <button type="submit" class="btn btn-success">Reservar</button>
                                    </div>
                                </form>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-secondary text-white">📝 Reservas Confirmadas (Historial)</div>
                <ul class="list-group list-group-flush">
                    @if (Model.Count == 0)
                    {
                        <li class="list-group-item text-muted">No hay reservas en el sistema.</li>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@item.Date.ToShortDateString()</strong> a las <strong>@item.Time</strong>
                                    <br />
                                    Cliente: <span class="text-primary">@item.UserName</span>
                                </div>
                                <span class="badge bg-success">Confirmada</span>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>