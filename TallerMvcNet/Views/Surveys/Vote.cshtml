@model TallerMvcNet.Models.Survey

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4>🗳️ Votación</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title mb-4">@Model.Question</h5>

            <form asp-action="SubmitVote" method="post">
                <input type="hidden" name="surveyId" value="@Model.Id" />

                <div class="mb-4">
                    @foreach (var option in Model.Options)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="selectedOption" value="@option.Text" id="@option.Text" required>
                            <label class="form-check-label" for="@option.Text">
                                @option.Text
                            </label>
                        </div>
                    }
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">¡Enviar Voto!</button>
                    <a href="@Url.Action("Index")" class="btn btn-link text-muted mt-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
